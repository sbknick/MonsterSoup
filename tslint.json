{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "one-line": [false, "check-open-brace"],
        "semicolon": true,
        "curly": false,
        "radix": false,
        "interface-name": false,
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "switch-default": false,
        "forin": false,
        "no-console": false,
        "no-object-literal-type-assertion": false
    }
}
